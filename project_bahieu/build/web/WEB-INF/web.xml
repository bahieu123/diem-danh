<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.Authentication.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomepageStudent</servlet-name>
        <servlet-class>.HomepageStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewScheduleStudent</servlet-name>
        <servlet-class>Controller.Student.ViewScheduleStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSchedule</servlet-name>
        <servlet-class>Controller.Teacher.ViewSchedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewScheduleForAtten</servlet-name>
        <servlet-class>Controller.Teacher.ViewScheduleForAtten</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomepageStudent</servlet-name>
        <url-pattern>/HomepageStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewScheduleStudent</servlet-name>
        <url-pattern>/ViewScheduleStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSchedule</servlet-name>
        <url-pattern>/ViewSchedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewScheduleForAtten</servlet-name>
        <url-pattern>/ViewScheduleForAtten</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
